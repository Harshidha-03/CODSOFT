// TASK-1-NUMBER-GAME

import java.util.Random;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();
        boolean play = true;
        
        while (play) {
            int randomNumber = random.nextInt(100) +1;
            int attempts = 0;
            int maxAttempts = 10;
            boolean correctGuess = false;
            
            System.out.println("Welcome to the number game! I have generated a number between 1 and 100.");
            System.out.println("You have " + maxAttempts + " attempts to guess the number. Can you guess it?");
            
            while (attempts < maxAttempts && !correctGuess){
                System.out.print("Enter you guess: ");    
                int userinput = scanner.nextInt();
                attempts++;
            
                if (userinput == randomNumber){
                    correctGuess = true;
                    System.out.println("Hooray! The number you have guessed is correct!");
                }else if (userinput < randomNumber){
                    System.out.println("The number you have guessed is too low.");
                }else{
                    System.out.println("The number you have guessed is too high.");
                }
            }
            
            if (!correctGuess){
                System.out.println("Oops! You have used all your " + maxAttempts + " attempts.");
                System.out.println("The correct number was " + randomNumber + ".");
            }
            
            System.out.println("Do you want to play again? (yes/no)");
            String toPlayAgain = scanner.next();
            play = toPlayAgain.equalsIgnoreCase("yes");
        }
        
        System.out.println("Thank you for playing!");
        scanner.close();
    }
}
